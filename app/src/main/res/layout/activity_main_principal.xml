<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Main_Principal"
    android:id="@+id/drawer_layout"
    android:background="#FFFFFF">
    <android.support.design.widget.CoordinatorLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/lyt_header">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/relativeLayout8"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/relativeLayout3"
            android:layout_alignBottom="@+id/relativeLayout3">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_main_uploadvide"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_upload" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/relativeLayout8"
            android:layout_marginTop="5dp"
            android:id="@+id/relativeLayout3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_show_faborites"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/estrella" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"

            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/relativeLayout3"
            android:layout_toStartOf="@+id/relativeLayout3"
            android:id="@+id/dsfsdffe">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_random"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_random_1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"

            android:layout_marginTop="0dp"
            android:layout_toLeftOf="@+id/dsfsdffe"
            android:layout_toStartOf="@+id/dsfsdffe"
            android:id="@+id/relativeLayout5">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout6">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_profile_main"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listview_main"
            android:layout_below="@+id/relativeLayout6"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/lyt_footer"
            android:cacheColorHint="#FFFFFF"
            android:background="#FFFFFF"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:scrollbars="none"
            android:listSelector="#00000000"
            android:layout_marginTop="1dp"
            android:scrollingCache="false"
            android:animationCache="false"
            android:clickable="false"
            />

        <RelativeLayout
            android:id="@+id/lyt_footer"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

        </RelativeLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/bt_top"
            android:src="@drawable/icon_top_1"
            android:layout_alignTop="@+id/dsfsdffe"
            android:layout_toLeftOf="@+id/dsfsdffe"
            android:layout_toStartOf="@+id/dsfsdffe" />

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lyt_votar_video"
            android:background="@drawable/style_dialog_vote"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:visibility="gone">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/vota_el_video"
                android:id="@+id/textView"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:textColor="#000000" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:id="@+id/ratingBar_votos"
                android:layout_below="@+id/textView"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/votar"
                android:id="@+id/bt_votar_main"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/dialog_style"
                android:layout_alignTop="@+id/ratingBar_votos"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toRightOf="@+id/ratingBar_votos"
                android:layout_toEndOf="@+id/ratingBar_votos" />

        </RelativeLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_flecha_registro"
            android:src="@drawable/icon_flecha"
            android:layout_alignTop="@+id/relativeLayout6"
            android:layout_toRightOf="@+id/relativeLayout6"
            android:visibility="gone"
            android:layout_alignBottom="@+id/relativeLayout5" />

    </RelativeLayout>






    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemIconTint="@android:color/black"
        app:headerLayout="@layout/nav_header"
        app:theme="@style/NavigationViewStyle"
        app:menu="@menu/navigation_menu_items" />


</android.support.v4.widget.DrawerLayout>
